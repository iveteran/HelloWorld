#
# ~/.bashrc
#

# If not running interactively, don't do anything
[[ $- != *i* ]] && return

alias ls='ls --color=auto'
alias ll='ls -l'
alias l.='ls -a'
alias grep='grep --color=auto'
alias man='man -P most'

export EDITOR='vim'
export PAGER='most'

set -o vi

PS1='[\u@\h \W]\$ '

if [ -f /etc/bash_completion ]; then
    . /etc/bash_completion
fi
